<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.springGroupS.dao.AdminDAO">

	<update id="setMemberLevelSelectChange">
		UPDATE member SET level = #{level} <if test="level == 999">, userDel = 'OK'</if><if test="level != 999">, userDel = 'NO'</if> WHERE idx = #{idx};
	</update>

	<delete id="memberDeleteGet">
		DELETE from member WHERE idx = #{idx};
	</delete>
</mapper>